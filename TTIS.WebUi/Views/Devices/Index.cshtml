@{
    ViewData["Title"] = "Devices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section AdditionalHeaderScript
{
    <link rel="stylesheet" href="@Url.Content("~/Assets/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Assets/plugins/timepicker/bootstrap-timepicker.min.css")">
}

<section class="content-header">
    <h1>
        <i class="fa fa-Device"></i>&nbsp;@ViewBag.Title
        <small></small>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h4 class="box-title"> <i class="fa fa-search"></i>&nbsp;  Filter </h4>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="form-group col-md-12">
                        <label>Keyword</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-search"></i></span>
                            <input type="text" id="txtKeyword" name="p_sKeyword" class="form-control" placeholder="Keyword..." onkeyup="RefreshDataTable('tblDeviceList')">
                        </div>
                    </div>

                    <div class="form-group col-md-2 pull-right">
                        <a style="width:100%" class="btn btn-success btn-flat" onclick="ResetFilter()"><i class="fa fa-refresh"></i>&nbsp;&nbsp;Reset Filter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row" style="margin-bottom:10px !important;">
        <div class="col-md-2">
            <a class="btn btn-block btn-primary btn-flat" onclick="fAdd()" data-toggle="modal"><i class="fa fa-plus-square"></i>&nbsp;&nbsp;New Device</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table id="tblDevicesList"
                                   style="width:100%"
                                   class="table table-bordered table-striped dataTable no-footer"
                                   role="grid"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section mdlInput{
    @Html.Partial("~/Views/Devices/_InputForm.cshtml", null)
    @Html.Partial("~/Views/Devices/_InputScript.cshtml", null)
}

@section AdditionalFooterScript
{
    <script type="text/javascript" src="@Url.Content("~/Assets/bower_components/datatables.net/js/jquery.dataTables.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Assets/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Assets/plugins/timepicker/bootstrap-timepicker.min.js")"></script>

    <script id="DataTableScript">
        function ResetFilter() {
            $("#txtKeyword").val("");
            RefreshDataTable("tblDevicesList");
        }

    $(document).ready(function () {
        //$("#mdlInputDialog").width("50%");
        var isSysAdmin = false;
        $('#tblDevicesList').DataTable({
            "ajax": {
                "url": "@Url.Action("DeviceListAsync", "Devices")",
                "type": "POST",
                "data": function (d) {
                    d.p_sKeyword = $("#txtKeyword").val();
                },
            },
            "columns": [
            {
                "data": "deviceId",
                className: "hidden",
                render: function (d) {
                    isSysAdmin = false;
                    if (d == 1) {
                        isSysAdmin = true;
                    }

                    return d;
                }
            },
            {
                "title": "Action",
                "width": "15%",
                className: "dt-col-center",
                render: function (d) {
                    var sReturn = "<button onclick = 'fShowDetail(this)' class='btn btn-success btn-sm btn-flat fa fa-eye'></button> " +
                                  "<button onclick = 'fEdit(this)' class='btn btn-warning btn-sm btn-flat fa fa-edit'></button> ";

                    return sReturn;
                },
            },
            {
                "title": "DeviceName",
                "data": "deviceName"
            },
            {
                "title": "Merk",
                "data": "manufacturer"
            },
            {
                "title": "Series",
                "data": "series"
            }],
            "processing": true,
            "serverSide": true,
            "lengthMenu": [[10, 20, 50, 100], [10, 20, 50, 100]],
            "filter": false,
            "sort": false,
            "orderMulti": false
        });
    });
    </script>
}
